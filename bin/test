#!/bin/sh
#
# アプリケーションのテストを実行する
# @note 引数はRSpec実行時のオプションとしてデリゲートされる
#
set -e;

cat <<EOS
=============================
===== run テスト =====
=============================
EOS

# マイグレーションの実行
docker-compose run --rm app bin/rails db:migrate RAILS_ENV=test

# テストの実行
docker-compose run --rm app /webapp/docker/scripts/test.sh $*;
