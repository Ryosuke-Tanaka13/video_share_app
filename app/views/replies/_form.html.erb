<!-- コメント返信入力フォーム ------------------------------------------------------------>
<div class="form-group">
  <%= form_with(model: [@comment, @reply], url: video_comment_replies_path(@video.id, comment.id), method: :post, local: false, id: "reply-form#{@reply.id}") do |f| %>
    <%= f.text_area :reply, placeholder: "返信内容を記載して下さい。", id: "reply-text", class: "form-control" %>
    <div class="content-show-comment-bottom-reply-btn float-right">
      <%= f.submit "返信", class: "btn btn-warning"%>
    </div>
  <% end %>
</div>