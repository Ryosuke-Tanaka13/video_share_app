<% provide(:title,  "ログインなし視聴者一覧") %>
  <div class="card">
    <div class="card-body table-responsive p-0">
      <table class="table table-hover text-nowrap"> 
        <tbody>
          <% @loginless_viewers.each do |loginless_viewer| %>
          <tr align="center">
            <td><%= link_to loginless_viewer.name, loginless_viewer_path(loginless_viewer) %></td>
            <td><%= loginless_viewer.email %></td>
            <% if current_system_admin %>
            <td><%= link_to "削除", loginless_viewer_path(loginless_viewer), method: :delete, data: { confirm: "#{loginless_viewer.name}の視聴者情報を削除します。本当によろしいですか？" }, class: "btn btn-md btn-danger" %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div> 