<% provide(:title, "投稿者詳細") %>

<div class="card">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
      <tbody>
        <tr>
          <th><%= "名前" %></th>
          <td>
            <%= @user.name %>
            <% if @user.is_valid == false %>(退会)<% end %>
          </td>
        </tr>
        <tr>
          <th><%= "メールアドレス" %></th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th><%= "所属組織名" %></th>
          <td><%= link_to @organization.name, organization_path(@organization) %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
  <% if current_user&.id == params[:id].to_i || current_user&.role == 'owner' %>
    <%= link_to "編集", edit_user_path, class: "btn btn-md btn-block btn-success" %><br>
  <% end %>
    <%= link_to "戻る", users_path(organization_id: @organization.id), class: "btn btn-md btn-block btn-secondary" %>
  <% if current_user&.id == params[:id].to_i %>
    <br><br><%= link_to "退会ページ", users_unsubscribe_path(@user), class: "btn btn-md btn-block btn-danger" %><br>
  <% end %>
  </div>
</div>