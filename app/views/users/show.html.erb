<% provide(:title, "投稿者詳細") %>

<div class="card">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
      <tbody>
        <tr>
          <th><%= "名前" %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th><%= "メールアドレス" %></th>
          <td><%= @user.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
  <% if current_user&.id == params[:id].to_i || current_user&.role == 'owner' %>
    <%= link_to "編集", edit_user_path, class: "btn btn-md btn-block btn-success" %>
  <% end %>
    <%= link_to "投稿者一覧", users_path, class: "btn btn-md btn-block btn-default" %>
  </div>
</div>