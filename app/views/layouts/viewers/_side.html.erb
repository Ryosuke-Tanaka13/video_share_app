<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <%= link_to "#", class:"brand-link" do %>
    <%= image_tag "favicon.ico", class:"brand-image img-circle elevation-3", style: "opacity: .8" %>
    <span class="brand-text font-weight-light">レコブル</span>
  <% end %>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="viewer-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
      </div>
      <div class="info">
        <%= link_to current_viewer.name, viewer_path(current_viewer), class:"d-block" %>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">   
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false"> 
        <% current_viewer.organization_viewers.includes([:organization]).each do |organization_viewer| %>
        <li class="nav-item">
          <%= link_to videos_path(organization_id: organization_viewer.organization_id), class:"nav-link" do %>  
            <i class="nav-icon fas fa-file-video"></i> 
            <p>
              <%= organization_viewer.organization.name %><br><span class="ml-5">動画一覧</span>
            </p>
          <% end %>
        </li>
        <% end %>
        <li class="nav-item">
          <%= link_to edit_viewer_path(current_viewer), class:"nav-link" do %>
            <i class="nav-icon fas fa-user-edit"></i>
            <p>
              アカウント編集
            </p>
          <% end %>
        </li>
      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>