<h1>対象Grの設定</h1>

<%= link_to "New Group", new_group_path, class: "btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Organization</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.organization.name %></td>
        <td><%= link_to "Show", group_path(group), class: "btn btn-outline-primary" %></td>
        <td><%= link_to "Edit", edit_group_path(group), class: "btn btn-outline-secondary" %></td>
        <td><%= link_to "Delete", group_path(group), method: :delete, data: { confirm: "Are you sure you want to delete this group?" }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
