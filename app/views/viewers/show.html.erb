<% provide(:title, "視聴者詳細") %>

<div class="card">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
      <tbody>
        <tr>
          <th><%= "名前" %></th>
          <td>
            <%= @viewer.name %>
            <% if @viewer.is_valid == false %>(退会)<% end %>
          </td>
        </tr>
        <tr>
          <th><%= "メールアドレス" %></th>
          <td><%= @viewer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
  <% if current_viewer&.id == params[:id].to_i %>
    <%= link_to "編集", edit_viewer_path, class: "btn btn-md btn-block btn-success" %>
    <%= link_to "退会ページ", viewers_unsubscribe_path(@viewer), class: "btn btn-md btn-block btn-danger" %><br>
  <% elsif current_user || current_system_admin %>
    <%= link_to "戻る", viewers_path, class: "btn btn-md btn-block btn-secondary" %>
  <% end %>
  </div>
</div>