<%= form_with(scope: :search, url:videos_search_videos_path, method: :get, local: true) do |f| %>

  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title_like, value: @search_params[:title_like] %><br>

  <%= f.label :created_at, "公開日" %>
  <%= f.date_field :created_at_from, value: @search_params[:created_at_from] %> ~
  <%= f.date_field :created_at_to, value: @search_params[:created_at_to] %><br>

  <%= f.label :range, "公開範囲" %>
  <%= f.select :range, value: @search_params[:range] %><br>

  <%= f.label :user, "動画投稿者" %>
  <%= f.text_field :user_name, value: @search_params[:user_name] %><br>

  <%= submit_tag '検索', class: "button" %>
<% end %>
